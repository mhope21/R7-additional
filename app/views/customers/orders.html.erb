<h1 class="text-center text-decoration-underline">Orders for <%= @customer.full_name %></h1>

<table class="table table-bordered mt-5">
  <thead>
    <tr>
      <th scope="col">Order ID</th>
      <th scope="col">Product Name</th>
      <th scope="col">Quantity</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <th scope="row"><%= order.id %></td>
        <td><%= order.product_name %></td>
        <td><%= order.product_count %></td>
        <td>
          <div class="btn-group">
          <%= link_to 'Show', order_path(order), class: "btn btn-primary active", aria: {current: "page"} %> 
          <%= link_to 'Edit', edit_order_path(order), class: "btn btn-primary" %> 
          <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#custdeleteModal" data-bs-order-id="<%= order.id %>" data-bs-order-customer-name="<%= order.customer.full_name %>" data-bs-order-product-name="<%= order.product_name %>" data-bs-order-product-count="<%= order.product_count%>">
                  Delete
                  </button>
          
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back to Customers', customers_path, class: "btn btn-primary" %>
<%= render "custdeleteModal" %>
