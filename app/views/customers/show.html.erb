
<div class="mt-0 pt-0">
  <h1 class="text-center">Customer Details</h1>
<%= render @customer %>

<div class="btn-group">
  <%= link_to "Edit this customer", edit_customer_path(@customer), class: "btn btn-primary active", aria: {current: "page"} %>
  <%= link_to "Back to customers", customers_path, class: "btn btn-primary" %>
<button type="button" class="btn btn-danger"
  data-bs-toggle="modal"
  data-bs-target="#deleteCustomerModal"
  data-bs-customer-id="<%= @customer.id %>"
  data-bs-customer-name="<%= @customer.full_name %>">
  Delete
</button>
<% Rails.logger.info "Customer ID: #{@customer.id}" %>
<% Rails.logger.info "Customer Name: #{@customer.full_name}" %>

</div>
</div>
<%= render "deleteCustomerModal" %>