<h1>Edit Order</h1>

<%= form_with(model: @order, local: true) do |form| %>
  <% if @order.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>
      <ul>
        <% @order.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :customer_id, "Customer" %>
    <%= form.collection_select :customer_id, @customers, :id, :full_name, prompt: "Select a Customer" %>
  </div>

  <div>
    <%= form.label :product_name %>
    <%= form.text_field :product_name %>
  </div>

  <div>
    <%= form.label :product_count %>
    <%= form.number_field :product_count %>
  </div>

  <div>
    <%= form.submit "Update Order" %>
  </div>
<% end %>

<%= link_to 'Back', orders_path %>
