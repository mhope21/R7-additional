      <ul>
        <% order.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="card" style="max-width: 500px; margin: auto;">
    <div class="card-body">
      <%= form_with model: @order, local: true do |form| %>
      <div class="mb-3">
        <%= form.label :customer_id, "Customer", class: "form-label" %>
        <%= form.collection_select :customer_id, @customers, :id, :full_name, {prompt: "Select a Customer"}, {class: "form-select"} %>
      </div>
    
      <div class="mb-3">
        <%= form.label :product_name, class: "form-label" %>
        <%= form.text_field :product_name, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :product_count, class: "form-label" %>
        <%= form.number_field :product_count, class: "form-control", min: 1 %>
      </div>
    

  
  <div>
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
</div>
</div>
<% end %>